{
    "name": "Morpheus",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "hostRequirements": {
        "gpu": true
    },

    "capAdd":[
        "SYS_NICE",
        "SYS_PTRACE"
    ],

    "securityOpt": [
        "seccomp=unconfined"
    ],

    "runArgs": [
        "--network=morpheus"
    ],

    "containerEnv": {
        "HOST_MORPHEUS_ROOT": "${localWorkspaceFolder}",
        "MORPHEUS_ROOT": "${containerWorkspaceFolder}",
        // "PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}/.devcontainer/bin"
    },

    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}/.devcontainer/bin",
    },

    "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/bin/setup-morpheus-env",

    "initializeCommand": [ "./.devcontainer/init.sh" ],

    "remoteUser": "${localEnv:USER}",

    "mounts": [
        {"type":"bind", "source": "/var/run/docker.sock", "target": "/var/run/docker.sock"},
        {"type":"bind", "source": "${localWorkspaceFolder}/.cache/conda", "target": "/home/${localEnv:USER}/.conda"},
        {"type":"bind", "source": "${localEnv:HOME}/.config/gh", "target": "/home/coder/.config/gh"},
    ],

    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "uid": "${localEnv:UID}",
            "gid": "${localEnv:UID}",
            "username": "${localEnv:USER}",
            "upgradePackages": false,
            "installZsh": false,
            "installOhMyZsh": false,
        },
        "ghcr.io/devcontainers/features/docker-from-docker": {},
        "ghcr.io/devcontainers/features/github-cli": {},
        "ghcr.io/devcontainers/features/dotnet:1": {},
        "./conda-default-env": {},
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "josetr.cmake-language-support-vscode",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-python.python",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "nvidia.nsight-vscode-edition",
                "xaver.clang-format",
			]
        }
    },
    "settings": {
        "C_Cpp.intelliSenseEngine": "disabled",
        "cmake.cmakePath": "cmake", // Ensure we use the default from the conda environment
        "cmake.languageSupport.enableFileAPI": true,
        "python.terminal.activateEnvironment": false,
        // Fix for https://github.com/dotnet/vscode-dotnet-runtime/issues/159
        // Once version 1.6.1 of the extension has been release, this can be removed
        "cmake.languageSupport.dotnetPath": "/usr/bin/dotnet",
    },
    "overrideFeatureInstallOrder": [
        "ghcr.io/devcontainers/features/common-utils",
        // "./conda-default-env",
    ]
}
